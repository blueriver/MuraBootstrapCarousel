<plugin>
	<name>Mura Bootstrap Carousel</name>
	<package>MuraBootstrapCarousel</package>
	<directoryFormat>packageOnly</directoryFormat>
	<version>1.1</version>
	<loadPriority>5</loadPriority>
	<provider>Blue River</provider>
	<providerURL>http://blueriver.com</providerURL>
	<category>Application</category>
	<autoDeploy>true</autoDeploy>
	<siteID></siteID>
	<settings/>
	<eventHandlers/>
	<displayobjects location="global">
		<displayobject 
			name="Boostrap Carousel" 
			displaymethod="dspCarousel" 
			component="displayObjects.displayObjects"
			configuratorInit="initBootstrapCarouselConfigurator"
			configuratorJS="displayObjects/configurators/carousel/configurator.js"
			persist="false" />
	</displayobjects>
</plugin>
